pipeline {
    agent any
    stages {
        stage('Terraform Destroy') {
            steps {
                build job: 'vs_terraform-destroy', parameters: []
            }
        }
        stage('Terraform - Apply') {
            steps {
                build job: 'vs_terraform', parameters: []
            }
        }
        stage ('Ansible - Run Playbooks') {
            steps {
                build job: 'vs_ansible', parameters: []
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
